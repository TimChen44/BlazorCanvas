@namespace BlazorCanvas

@if (Element != null)
{
    <g transform="translate(@ERect.X @ERect.Y)">

        <rect x="-0.25" y="-0.25" width="@JoyWidth" height="@JoyHeight" class="@JoyClass" />

        <rect x="-0.25" y="@(ERect.H/2 - JoyHeight/2)" width="@JoyWidth" height="@JoyHeight" class="@JoyClass" />

        <rect x="-0.25" y="@(ERect.H- JoyHeight + 0.25)" width="@JoyWidth" height="@JoyHeight" class="@JoyClass" />

        <rect x="@(ERect.W/2 - JoyWidth/2)" y="-0.25" width="@JoyWidth" height="@JoyHeight" class="@JoyClass" />

        <rect x="@(ERect.W - JoyWidth + 0.25)" y="-0.25" width="@JoyWidth" height="@JoyHeight" class="@JoyClass" />

        <rect x="@(ERect.W - JoyWidth + 0.25)" y="@(ERect.H/2 - JoyHeight/2)" width="@JoyWidth" height="@JoyHeight" class="@JoyClass" />

        <rect x="@(ERect.W/2 - JoyWidth/2)" y="@(ERect.H- JoyHeight + 0.25)" width="@JoyWidth" height="@JoyHeight" class="@JoyClass" />

        <rect x="@(ERect.W - JoyWidth + 0.25)" y="@(ERect.H- JoyHeight + 0.25)" width="@JoyWidth" height="@JoyHeight" class="@JoyClass" />
    </g>
}

<style>
    .joy {
        stroke: black;
        stroke-width: 0.5;
        fill: white;
    }

    .joy-focus {
        stroke: black;
        stroke-width: 0.5;
        fill: black;
    }
</style>