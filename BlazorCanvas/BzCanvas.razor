@using BlazorCanvas.Element
<CascadingValue Value="this">
    <Viewer></Viewer>
    <svg viewBox="@Viewer?.ViewBoxBind" width="@Width" height="@Height" xmlns="http://www.w3.org/2000/svg"
         @onmousedown="OnMouseDown" @onmouseup="OnMouseUp" @onmousemove="OnMouseMove" @onwheel="OnWheel">

        @Backgrounder

        @Element

        @{
            Flow? previousFlow;
        }

        @foreach (var flow in DataFlow.Flows)
        {
            <Flow Data="flow"></Flow>
        }

        <SelectionBox></SelectionBox>
        <EditorControl></EditorControl>
    </svg>
</CascadingValue>