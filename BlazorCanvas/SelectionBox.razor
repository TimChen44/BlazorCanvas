@if (SelectionBoxIsShow)
{
	if (IsLeftToRight == true)
	{
		<rect x="@X" y="@Y" width="@Width" height="@Height"
	  style="stroke:rgb(51, 153, 255);stroke-width:1;fill:rgb(51, 153, 255);fill-opacity:0.4" />

	}
	else
	{
		<rect x="@X" y="@Y" width="@Width" height="@Height"
	  style="stroke:rgb(153, 255, 51);stroke-width:1;fill:rgb(153, 255, 51);fill-opacity:0.4" />
	}
}
